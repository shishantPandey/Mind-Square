<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Users List</title>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
</head>
<body class="bg-gray-100 p-8">
    <h1 class="text-3xl font-bold mb-6">Users</h1>

    <table class="min-w-full bg-white shadow-md rounded">
        <thead>
            <tr>
                <th class="py-2 px-4 border-b-2">Username</th>
                <th class="py-2 px-4 border-b-2">Email</th>
                <th class="py-2 px-4 border-b-2">Actions</th>
            </tr>
        </thead>
        <tbody>
            <% users.forEach(user => { %>
            <tr>
                <td class="py-2 px-4 border-b">  <a href="/userDetails/<%= user._id %>" class="text-blue-600 hover:underline">
                    <%= user.username %>
                </a></td>
                <td class="py-2 px-4 border-b"><%= user.email %></td>
                <td class="py-2 px-4 border-b">
                    <!-- Delete Icon -->
                    <button onclick="confirmDelete('<%= user._id %>')" class="text-red-500 hover:text-red-700">
                        üóëÔ∏è
                    </button>
                </td>
            </tr>
            <% }) %>
        </tbody>
    </table>

    <script>
        function confirmDelete(userId) {
            // Ask for confirmation before deleting
            if (confirm("Are you sure you want to delete this user?")) {
                // Redirect to delete route if confirmed
                window.location.href = `/users/delete/${userId}`;
            }
        }
    </script>
</body>
</html>
